@model ShowTime.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>register</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <link href="~/css/ie10-viewport-bug-workaround.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/css/signin.css" rel="stylesheet">

    <!-- Just for debugging purposes. Don't actually copy these 2 lines! -->
    <!--[if lt IE 9]><script src="../../assets/js/ie8-responsive-file-warning.js"></script><![endif]-->
    <script src="~/css/js/ie-emulation-modes-warning.js"></script>
</head>
<body>
    <div> 
        @using (@Html.BeginForm("RegisterToSite", "home"))
        {
            
                <div class="container">
                    <h1 class="well">רישום משתמש חדש</h1>
                    <div class="col-lg-12 well">
                        <div class="row">
                            <form>
                                <div class="col-sm-12">
                                    <div class="row">
                                        <div class="col-sm-6 form-group">
                                            <label>First Name</label>
                                            @Html.TextBoxFor(m => m.FirstName , new { @placeholder = "שם פרטי", @class = "form-control" })<br />
                                            <span style="color:red">@Html.ValidationMessageFor(x => x.FirstName)</span>
                                        </div>
                                        <div class="col-sm-6 form-group">
                                            <label>Last Name</label>
                                            @Html.TextBoxFor(m => m.LastName , new { @placeholder = "שם משפחה", @class = "form-control" })<br />
                                            <span style="color:red">@Html.ValidationMessageFor(x => x.LastName)</span></div>
                                    </div>
                                    <div class="form-group">
                                        <label>Phone Number</label>
                                        @Html.TextBoxFor(m => m.Phone, new { @placeholder = "פלאפון", @class = "form-control" })<br />
                                        <span style="color:red">@Html.ValidationMessageFor(x => x.Phone)</span>
                                    </div>
                                    <div class="form-group">
                                        <label>Email Address</label>
                                        @Html.TextBoxFor(m => m.Email, new { @placeholder = "אימייל", @class = "form-control" })<br />
                                        <span style="color:red">@Html.ValidationMessageFor(x => x.Email)</span>
                                    </div>
                                    <div class="form-group">
                                        <label>UserName</label>
                                        @Html.TextBoxFor(m => m.UserName, new { @placeholder = "שם משתמש", @class = "form-control" })<br />
                                        <span style="color:red">@Html.ValidationMessageFor(x => x.UserName)</span>
                                    </div>
                                    <div class="form-group">
                                        <label>סיסמה</label>
                                        @Html.TextBoxFor(m => m.Password, new { @placeholder = "סיסמה", @class = "form-control",@type="password" })<br />
                                        <span style="color:red">@Html.ValidationMessageFor(x => x.Password)</span>
                                    </div>
                                  
                                </div>
                                <input type="submit" class="btn btn-lg btn-info" value="הרשם" />
                            </form>
                        </div>
                    </div>
                </div>

            
        }
    </div>
    <script src="http://d1n0x3qji82z53.cloudfront.net/src-min-noconflict/ace.js"></script>
</body>
</html>

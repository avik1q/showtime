@model ShowTime.ViewModel.OrderVM
@using ShowTime.Models

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ההופעות שהזמנתי</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Just for debugging purposes. Don't actually copy these 2 lines! -->
    <!--[if lt IE 9]><script src="~/css/js/ie8-responsive-file-warning.js"></script><![endif]-->
    <script src="~/css/js/ie-emulation-modes-warning.js"></script>
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="~/css/js/html5shiv.min.js"></script>
      <script src="~/css/js/respond.min.js"></script>
    <![endif]-->
    <!-- Custom styles for this template -->
    <link href="~/css/jumbotron.css" rel="stylesheet">
</head>
<body>
    @Html.Partial("ToolBar")
    <div class="jumbotron">
        <div class="container" style="text-align:right">
            <h1>צפיה בהזמנות</h1>
            <p>דף צפיה בהזמנות</p>
        </div>
    </div>
    <div> 
        <table class="table table-striped table-bordered text-center" style="text-align:center">
            <tr style="color:blue">
                <th style="text-align:center">       </th>
                <th style="text-align:center">כמות כרטיסים</th>
                <th style="text-align:center">שם ההופעה</th>
                <th style="text-align:center">מספר הופעה</th>

            </tr>
            @{
                foreach (Order item in Model.orderlist.Reverse<Order>())
                {
                    <tr style="color:black">
                        <td><form method="get" action="cancelShow"><input name="ref" type="hidden" value=@item.ID /><input type="submit" value="בטל" /></form></td>
                        <td>@item.Amount</td>
                        <td> @ViewData[item.Show.ToString()]</td>
                        <td>@item.Show</td>
                    </tr>
                }
            }
        </table>
    </div>

</body>
</html>

